@model MyFacebookLikeApplication.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

<h2>Create a New Account</h2>
<p>
    Use the form below to register in our system. 
</p>
<p>
    Passwords are required to be a minimum of @Membership.MinRequiredPasswordLength characters in length.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/themes/base/jquery.ui.core.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.datepicker.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.theme.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.ui.datepicker.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary()
    <div>
        <fieldset>
            <legend>Account Information</legend>
            
            <p>Name:@Html.TextBoxFor(x=>x.UserName)</p>
            <p>Surname:@Html.TextBoxFor(x=>x.UserSurname)</p>
            <p>Email:@Html.TextBoxFor(x=>x.Email)</p>
            <p>Password:@Html.TextBoxFor(x=>x.Password)</p>
            <p>Confirm password:@Html.TextBoxFor(x=>x.ConfirmPassword)</p>
            <p>@Html.DropDownListFor(x=>x.Gender,new []
                                                {
                                                    new SelectListItem(){Text = "Male",Value = bool.TrueString},
                                                    new SelectListItem(){Text = "Female",Value=bool.FalseString} 
                                                },"Choose your gender:")</p>
            <p>Date of birth:@Html.TextBoxFor(x=>x.Birthday, "Birthday")</p>
            <p>@Html.DropDownListFor(x=>x.MaritalStatus,new []
                                                {
                                                    new SelectListItem(){Text = "Married",Value = bool.TrueString},
                                                    new SelectListItem(){Text = "Not married",Value=bool.FalseString} 
                                                },"Choose your marital status:")</p>

            <p>List of interests:<br/> @Html.TextAreaFor(x => x.ListOfInterests, 10, 55, null)</p>
            <p>
                <input type="submit" value="Register" />
            </p>
        </fieldset>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#Birthday').datepicker({ firstDay: 1, dateFormat: 'dd.mm.yy' });
    });
</script>

